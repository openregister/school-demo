h1.heading-xlarge= @heading

.grid-row
  .column-full
    form role='search' action='/items' method='get'
      .form-group#search
        input#q.typeahead.form-control name='q' data-host=ENV['HOST'] autofocus='autofocus' placeholder='Enter a town, street, or school name?' type='text'
        button.search.button style="margin-left: 15px" type='submit' Search

.grid-row
  .column-half
    ul
      - @schools.each do |school|
        li
          = link_to school.name, school_url(id: school.record), class: 'school', data: {lat: school.coordinates.try(:last), lon: school.coordinates.try(:first)}
  .column-half
    == render partial: 'shared/map', locals: { lat: @lat, lon: @lon }
